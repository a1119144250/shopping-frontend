/* pages/user-info/user-info.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 头像区域 */
.header-section {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c5a 100%);
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.user-name {
  margin-top: 24rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.user-username {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 信息区域 */
.info-section {
  margin: 24rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  padding: 0 30rpx 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.info-value {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-value text {
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-date {
  font-size: 24rpx;
  color: #999;
}

.copy-btn {
  margin-left: 16rpx;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  color: #ff6b35;
  border: 1rpx solid #ff6b35;
  border-radius: 8rpx;
}

.highlight {
  color: #ff6b35 !important;
  font-weight: bold;
  font-size: 32rpx !important;
}

.token-time {
  color: #52c41a;
  font-size: 26rpx;
}

.token-time.warning {
  color: #ff4d4f;
}

/* 操作按钮区域 */
.action-section {
  margin: 24rpx 30rpx;
  padding: 0;
}

.edit-btn,
.logout-btn {
  width: 100%;
  height: 88rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.edit-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c5a 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.logout-btn {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* 按钮点击效果 */
.edit-btn::after,
.logout-btn::after {
  border: none;
}

.edit-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.logout-btn:active {
  background: #fff5f5;
}

