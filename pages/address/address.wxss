/* pages/address/address.wxss */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.address-content {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.address-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.default-tag {
  padding: 6rpx 12rpx;
  background-color: #ff6b35;
  color: #fff;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.address-region {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.address-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
}

/* 地址操作按钮 */
.address-actions {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.action-btn {
  min-width: 80rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 25rpx;
  margin-bottom: 15rpx;
  padding: 0 20rpx;
}

.action-btn:last-child {
  margin-bottom: 0;
}

.edit-btn {
  background-color: #4CAF50;
}

.delete-btn {
  background-color: #f44336;
}

.action-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
}

/* 空状态 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e9ecef;
  z-index: 1000;
}

.add-address-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  background-color: #ff6b35;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.add-address-btn:active {
  background-color: #e55a2b;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}
