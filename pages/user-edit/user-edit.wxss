/* pages/user-edit/user-edit.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 头像编辑区域 */
.avatar-section {
  background: #fff;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 80rpx;
  border: 4rpx solid #f0f0f0;
}

.avatar-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.avatar-wrapper:active .avatar-mask {
  opacity: 1;
}

.camera-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.avatar-tip {
  font-size: 22rpx;
  color: #fff;
}

/* 表单区域 */
.form-section {
  background: #fff;
  margin-bottom: 24rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  flex-shrink: 0;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-right: 4rpx;
}

.form-input,
.form-picker {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.form-input {
  height: 44rpx;
  line-height: 44rpx;
}

.picker-value {
  color: #333;
}

/* 提示信息区域 */
.tips-section {
  background: #fff;
  padding: 24rpx 30rpx;
  margin-bottom: 24rpx;
}

.tips-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.tips-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tips-text {
  flex: 1;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* 操作按钮区域 */
.action-section {
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.submit-btn,
.cancel-btn {
  width: 100%;
  height: 88rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c5a 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.submit-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

.cancel-btn {
  background: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.cancel-btn[disabled] {
  opacity: 0.5;
}

/* 按钮点击效果 */
.submit-btn::after,
.cancel-btn::after {
  border: none;
}

.submit-btn:active:not([disabled]) {
  opacity: 0.8;
  transform: scale(0.98);
}

.cancel-btn:active:not([disabled]) {
  background: #f5f5f5;
}

/* 输入框占位符样式 */
.form-input::-webkit-input-placeholder {
  color: #ccc;
  font-size: 26rpx;
}

