/* pages/cart/cart.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 购物车内容区域 */
.cart-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 120rpx; /* 为底部栏留出空间 */
}

/* 全选栏 */
.select-all-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.select-all {
  display: flex;
  align-items: center;
}

.select-icon {
  margin-right: 10rpx;
}

.select-text {
  font-size: 28rpx;
  color: #333;
}

.clear-btn {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}

.clear-btn text {
  font-size: 24rpx;
  color: #666;
}

/* 购物车列表 */
.cart-list {
  flex: 1;
  background-color: #fff;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
  transition: all 0.3s;
}

.cart-item.selected {
  background-color: #fff8f5;
}

.item-select {
  margin-right: 20rpx;
}

.item-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  display: flex;
  align-items: baseline;
}

.price-current {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-right: 10rpx;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* 数量控制 */
.item-controls {
  display: flex;
  align-items: center;
}

.control-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background-color: #ff6b35;
}

.control-minus {
  background-color: #ccc;
}

.control-count {
  margin: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.item-delete {
  margin-left: 20rpx;
  padding: 10rpx;
}

/* 推荐商品 */
.recommend-section {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}

.recommend-title {
  margin-bottom: 20rpx;
}

.recommend-title text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.recommend-list {
  display: flex;
  white-space: nowrap;
}

.recommend-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  text-align: center;
}

.recommend-item:last-child {
  margin-right: 0;
}

.recommend-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.recommend-name {
  display: block;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-price {
  font-size: 26rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 空购物车 */
.empty-cart {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background-color: #fff;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6b35;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.go-shopping-btn:active {
  background-color: #e55a2b;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e9ecef;
  z-index: 1000;
}

.bar-left {
  flex: 1;
}

.total-info {
  display: flex;
  align-items: baseline;
  margin-bottom: 5rpx;
}

.total-text {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.total-desc {
  font-size: 24rpx;
  color: #666;
}

.bar-right {
  margin-left: 20rpx;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  text-align: center;
}

.checkout-btn.active {
  background-color: #ff6b35;
  color: #fff;
}

.checkout-btn.active:active {
  background-color: #e55a2b;
}

.checkout-btn.disabled {
  background-color: #ccc;
  color: #999;
}
