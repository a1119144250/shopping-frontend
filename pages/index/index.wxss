/* pages/index/index.wxss */

.container {
  padding-bottom: 120rpx; /* 为底部购物车按钮留出空间 */
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.search-input {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 轮播图 */
.banner-section {
  margin-bottom: 30rpx;
}

.banner-swiper {
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类导航 */
.category-nav {
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.nav-scroll {
  width: 100%;
}

.nav-list {
  display: flex;
  white-space: nowrap;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  min-width: 100rpx;
}

.nav-item:last-child {
  margin-right: 0;
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 商品区域 */
.recommend-section,
.hot-section {
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.title-more {
  font-size: 26rpx;
  color: #ff6b35;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}
