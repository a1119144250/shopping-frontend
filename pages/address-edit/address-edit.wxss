/* pages/address-edit/address-edit.wxss */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  flex: 1;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333;
}

/* 地区选择器 */
.location-selector {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-text {
  font-size: 28rpx;
  color: #333;
}

.location-placeholder {
  font-size: 28rpx;
  color: #999;
}

.location-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 地址标签 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
}

.tag-item {
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  border-radius: 25rpx;
  transition: all 0.3s;
}

.tag-item.active {
  background-color: #ff6b35;
  color: #fff;
}

/* 开关项 */
.switch-item {
  justify-content: space-between;
}

/* 提交区域 */
.submit-section {
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6b35;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.submit-btn:active {
  background-color: #e55a2b;
}
