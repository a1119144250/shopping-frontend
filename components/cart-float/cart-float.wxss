/* components/cart-float/cart-float.wxss */

.cart-float {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b35, #ff8f65);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 53, 0.4);
  z-index: 1000;
  transition: all 0.3s ease;
  overflow: hidden;
}

.cart-float.has-items {
  width: 160rpx;
  border-radius: 50rpx;
  justify-content: space-between;
  padding: 0 20rpx;
}

.cart-float:active {
  transform: scale(0.95);
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 53, 0.5);
}

/* 购物车图标区域 */
.cart-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 商品数量徽章 */
.cart-badge {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  background-color: #ff3030;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(255, 48, 48, 0.3);
}

.badge-text {
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
}

/* 总价显示 */
.cart-price {
  display: flex;
  align-items: baseline;
  color: #fff;
  font-weight: bold;
}

.price-symbol {
  font-size: 20rpx;
  margin-right: 2rpx;
}

.price-value {
  font-size: 24rpx;
}

/* 波纹动画 */
.cart-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    width: 0;
    height: 0;
    opacity: 1;
  }
  100% {
    width: 200rpx;
    height: 200rpx;
    opacity: 0;
  }
}

/* 悬浮动画 */
.cart-float {
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 当有商品时停止悬浮动画 */
.cart-float.has-items {
  animation: none;
}
