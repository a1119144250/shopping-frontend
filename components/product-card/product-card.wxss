/* components/product-card/product-card.wxss */

.product-card {
  width: 335rpx;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.product-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 商品图片区域 */
.product-image-wrapper {
  position: relative;
  width: 100%;
  height: 240rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.product-card:active .product-image {
  transform: scale(1.05);
}

/* 折扣标签 */
.discount-tag {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  padding: 8rpx 12rpx;
  background: linear-gradient(135deg, #ff6b35, #ff8f65);
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.3);
}

/* 商品信息区域 */
.product-info {
  padding: 20rpx;
}

.product-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 最多显示2行 */
  word-break: break-all; /* 强制换行 */
  line-height: 1.4;
  max-height: 2.8em; /* 2行的高度 */
}

.product-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; /* 最多显示1行 */
  word-break: break-all; /* 强制换行 */
  line-height: 1.4;
  max-height: 1.4em; /* 1行的高度 */
}

/* 评分和销量 */
.product-meta {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.product-rating {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.rating-text {
  font-size: 22rpx;
  color: #ff6b35;
  margin-right: 5rpx;
  font-weight: bold;
}

.rating-star {
  font-size: 20rpx;
  color: #ff6b35;
}

.product-sales {
  font-size: 20rpx;
  color: #999;
}

/* 底部价格和操作区域 */
.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  display: flex;
  align-items: baseline;
  flex: 1;
}

.price-current {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-right: 10rpx;
}

.price-original {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

/* 加入购物车按钮 */
.add-cart-wrapper {
  margin-left: 20rpx;
}

.add-cart-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ff6b35, #ff8f65);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
}

.add-cart-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.4);
}

.add-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
}
